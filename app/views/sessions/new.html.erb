<div class="container">
  <div class="row post-form">
    <h1>Log in</h1>
      <div>
          <%= form_for(:session, url: login_path) do |f| %>
            <%= render 'layouts/error_message' %>
              <div class="form-group">
                  <%= f.label :email, class: "col-sm-5 col-md-5 col-lg-5 col-form-label" %>
                  <div class="col-sm-7 col-md-7 col-lg-7">
                      <%= f.email_field :email, class: 'form-control' , placeholder:"Enter your email address"%>
                  </div>
              </div>
              <div class="form-group">
                  <%= f.label :password, class: "col-sm-5 col-md-5 col-lg-5 col-form-label" %>
                  <%= link_to "(forgot password)", new_password_reset_path %>
                  <div class="col-sm-7 col-md-7 col-lg-7">
                      <%= f.password_field :password, class: 'form-control' , placeholder:"Enter a new password" %>
                  </div>
              </div>


                <div class="form-group">
                    <%= f.label :remember_me, class: "col-sm-5 col-md-5 col-lg-5 col-form-label" do %>
                    
                    <%= f.check_box :remember_me %>
                        <span>Remember Me</span>
                    <% end %>
              </div>
              <div class="form-group">
                  <div class="session-form-btn-group">
                      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
                      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-block"%>
                  </div>
              </div>
              <div class="text-right"><%= link_to "forget password?", new_password_reset_path %></div>
          <% end %>
      </div>
  </div>
</div>