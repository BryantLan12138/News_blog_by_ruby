<%provide(:title,@user.name)%>
    <div class="row">
        <div class="container">
            <div class="row">
                <h1 class="text-center"><%= image_tag(@user.image_url.to_s, class: "prof-img") %></h1>
                <h1><%=@user.name%></h1>
                <p class="text-center"><i class="fa fa-clock-o" aria-hidden="true"></i>
                        <%=@user.created_at.strftime("%d/%m/%Y") %>  |     <i class="fa fa-map-marker" aria-hidden="true"></i>  <%=@user.city%></p>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><%= @user.name %> recent posts:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @posts.each do |post| %>
                            <tr>
                                <td scope="row"><%=post.title%></td>
                                <td class="text-right"><%=post.created_at.strftime("%d/%m/%Y")%></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>

                
                <div class="col-sm-6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><%= @user.name %> recent comments:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @posts.each do |post| %>
                            <tr>
                                <td scope="row"><%=post.title%></td>
                                <td class="text-right"><%=post.created_at.strftime("%d/%m/%Y")%></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>