<div class="col-sm-6 col-md-6 col-lg-6">
    <table class="table">
      <thead>
          <tr>
              <th><%= @user.name %> recent posts:</th>
          </tr>
      </thead>
      <tbody>
          <% @posts.each do |post| %>
          <tr>
              <td scope="row"><%= link_to post.title, post_url(post.id) %></td>
              <td class="text-right"><%=post.created_at.strftime("%d/%m/%Y")%></td>
          </tr>
          <% end %>
      </tbody>
  </table>
  </div>