
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <br><br><br>
    <div class="card">
      <div class="card-body">
        <br><br><br>
        <h1>Forgot password</h1>
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %><br><br>
        <div class="text-center"><%= f.submit "Submit", class: "btn btn-info" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>