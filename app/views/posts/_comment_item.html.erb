<div class="comment-container">
    <div class="image">
      <% if @post.user.image.present? %>
        <%= image_tag(@post.user.image.to_s, :class => "avatar") %>
      <% else %>
        <%= image_tag "default.png", :class => "avatar" %>
      <% end %>
    </div>
    <div class="content">
      <div class="details">
        <span class="name">
        <%= link_to comment.user.name, user_url(comment.user.id) %>:
        </span>
        <span class="date text-muted">
        <%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S').to_s %>
        </span>
      </div>
      <div class="content">
        <% if comment.post_id == @post.id %>
          <%= comment.content %>
        <% else %>
          reply @<%= Post.find(comment.post_id).user.name %>: <%= comment.content %>
        <% end %>
      </div>
    </div>
    <div class="reply">
        <%= link_to '', post_url(comment.id), class:"text-muted glyphicon glyphicon-comment" %>
    </div>
  </div>